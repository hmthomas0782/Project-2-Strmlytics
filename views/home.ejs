<!-- /views/releases/home.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Releases</title>
</head>
<body>
  <h1>All Releases</h1>
  <ul>
    <% releases.forEach(release => { %>
      <li>
        <h2><%= release.title %></h2>
        <p><%= release.description %></p>
        <p>Release Date: <%= release.releaseDate.toDateString() %></p>
        <form action="/releases/delete/<%= release._id %>" method="POST">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>

  <a href="/releases/new">Add a New Release</a>
</body>
</html>
